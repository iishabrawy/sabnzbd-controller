<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:minHeight="@dimen/listview_row_min_height"
    android:orientation="horizontal" >

    <com.gmail.at.faint545.views.StyledTextView
        android:id="@+id/history_details_row_title"
        style="@style/TextAppearance.Small.Bold"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="6dp" />

    <com.gmail.at.faint545.views.StyledTextView
        android:id="@+id/history_details_row_value"
        style="@style/TextAppearance.Small"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="6dp" />

</LinearLayout>