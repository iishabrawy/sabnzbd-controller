<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:vpi="http://schemas.android.com/apk/res/com.gmail.at.faint545"
    android:id="@+id/root"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <com.viewpagerindicator.TitlePageIndicator
        android:id="@+id/indicator"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/vpi_background"
        android:textColor="#7FFFFFFF"
        vpi:clipPadding="-15dip"
        vpi:footerColor="@android:color/transparent"
        vpi:footerIndicatorStyle="none"
        vpi:footerIndicatorHeight="0dip"
        vpi:footerLineHeight="4dip"
        vpi:selectedBold="true"
        vpi:selectedColor="@android:color/white"
        vpi:titlePadding="55dip" />

    <android.support.v4.view.ViewPager
        android:id="@+id/pager"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:visibility="visible" />

</LinearLayout>