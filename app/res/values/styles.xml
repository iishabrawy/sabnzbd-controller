<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base theme -->
    <style name="Theme.Sabnzbd" parent="@style/Theme.Sherlock.Light.DarkActionBar">
        <item name="android:windowBackground">@color/background</item>
        <item name="actionBarStyle">@style/Theme.Sabnzbd.ActionBar.Style</item>
        <item name="android:actionBarStyle">@style/Theme.Sabnzbd.ActionBar.Style</item>
        <item name="actionBarItemBackground">@drawable/abs__item_selector</item>
        <item name="android:actionBarItemBackground">@drawable/abs__item_selector</item>
        <item name="actionModeStyle">@style/ActionMode</item>
        <item name="android:actionModeStyle">@style/ActionMode</item>

        <!-- HoloWidgets theme -->
        <item name="holoWidgetTheme">@style/Holo.Theme.Light</item>
    </style>

    <!-- Default ActionBar style -->
    <style name="Theme.Sabnzbd.ActionBar.Style" parent="Widget.Sherlock.Light.ActionBar.Solid.Inverse">
        <item name="background">@drawable/ab_background</item>
        <item name="android:background">@drawable/ab_background</item>
        <item name="backgroundSplit">@color/ab_background</item>
        <item name="android:backgroundSplit">@color/ab_background</item>
    </style>

    <!-- Base theme w/o accent -->
    <style name="Theme.Sabnzbd.No.Accent" parent="@style/Theme.Sabnzbd">
        <item name="actionBarStyle">@style/Theme.Sabnzbd.ActionBar.Style.No.Accent</item>
        <item name="android:actionBarStyle">@style/Theme.Sabnzbd.ActionBar.Style.No.Accent</item>
    </style>

    <!-- Default ActionBar style w/o accent -->
    <style name="Theme.Sabnzbd.ActionBar.Style.No.Accent" parent="@style/Theme.Sabnzbd.ActionBar.Style">
        <item name="background">@color/ab_background</item>
        <item name="android:background">@color/ab_background</item>
        <item name="backgroundSplit">@color/ab_background</item>
        <item name="android:backgroundSplit">@color/ab_background</item>
    </style>

    <!-- Additional styles -->
    <style name="Theme.Sabnzbd.ForceOverflow" parent="@style/Theme.Sabnzbd">
        <item name="absForceOverflow">true</item>
    </style>

    <style name="ActionMode" parent="Sherlock.__Widget.ActionMode">
        <item name="background">@color/ab_background</item>
    </style>

    <!-- Preference text header style -->
    <style name="Preference" />
    <style name="Preference.Header" />

    <style name="Preference.Header.Text">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@color/secondary_text_holo_light</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/preference_header_text_size</item>
        <item name="android:paddingLeft">8dip</item>
        <item name="android:textAllCaps">true</item>
        <item name="textAllCaps">true</item>
        <item name="fontface">fonts/Roboto-Bold.ttf</item>
    </style>

    <!-- Custom text styles -->
    <style name="TextAppearance" parent="@android:style/TextAppearance">
        <item name="fontface">fonts/Roboto-Regular.ttf</item>
    </style>

    <style name="TextAppearance.Medium" parent="TextAppearance">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextAppearance.Large" parent="TextAppearance">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="TextAppearance.Small" parent="TextAppearance">
        <item name="android:textColor">@android:color/secondary_text_light</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextAppearance.Small.Bold" parent="TextAppearance">
        <item name="android:textColor">@android:color/secondary_text_light</item>
        <item name="android:textSize">14sp</item>
        <item name="fontface">fonts/Roboto-Bold.ttf</item>
    </style>

    <!-- Style for empty messages -->
    <style name="TextAppearance.Empty" parent="TextAppearance">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#66000000</item>
        <item name="fontface">fonts/Roboto-BoldCondensed.ttf</item>
    </style>

</resources>